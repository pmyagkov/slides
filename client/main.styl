body 
  margin: 0

.slides 
  list-style-type: none
  margin: 0
  padding: 0

  & li
    width: 100vw
    height: 100vh
    float: left
    padding: 0
    background-size: cover


.control-panel 
  position: fixed
  bottom: 0
  left: 0
  background: rgba(0,0,0,0.7)
  color: white
  font-size: 24px
  padding: 10px

  & .sep
    color: rgba(255,255,255,.4)
    margin: 0 5px


  & .slides-stat
    vertical-align: middle
    /* display: inline-block */

    color: rgba(255,255,255,.7)

  & .connectivity
    width: 18px;
    height: 18px
    border-radius: 100%
    display: inline-block
    border: 1px grey solid
    vertical-align: middle

    &.online
      background-color: green

    &.offline
      background-color: red




